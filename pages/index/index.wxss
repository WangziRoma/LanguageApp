.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4edf9 100%);
  min-height: 100vh;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  width: 100%;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  background: linear-gradient(90deg, #1a2a6c, #b21f1f, #fdbb2d);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
  text-align: center;
}

.signup-form {
  width: 100%;
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  background-color: #f9f9f9;
}

.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  background-color: transparent;
  border: none;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #4a90e2;
}

.language-selector {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.language-option {
  width: 48%;
}

.language-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 20rpx;
  border-radius: 15rpx;
  border: 2rpx solid #e0e0e0;
  background-color: #f9f9f9;
  transition: all 0.3s ease;
}

.language-card.selected {
  border-color: #4a90e2;
  background-color: #eaf2fd;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.2);
}

.language-card text {
  margin-top: 15rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.signup-button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(90deg, #4a90e2, #63bdf7);
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(74, 144, 226, 0.3);
  transition: all 0.3s ease;
}

.signup-button.disabled {
  background: linear-gradient(90deg, #cccccc, #dddddd);
  box-shadow: none;
}

.footer {
  margin-top: 60rpx;
  font-size: 26rpx;
  color: #999;
}
